<?xml version="1.0" encoding="utf-8"?>
<!--
FILE: transaction_card_background.xml
LOCATION: res/drawable/
PURPOSE: Drawable cho nền card của mỗi item giao dịch
USAGE: Được gọi trong transaction_item.xml qua android:background="@drawable/transaction_card_background"
FEATURES:
  - Góc bo tròn 8dp
  - Viền nhẹ màu xám
  - Nền trắng
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" />
    <corners android:radius="8dp" />
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />
</shape>
