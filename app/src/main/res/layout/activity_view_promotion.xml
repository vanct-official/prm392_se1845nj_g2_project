<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết khuyến mãi"
                android:textSize="28sp"
                android:textColor="#1E293B"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin mã giảm giá cho khách hàng"
                android:textSize="14sp"
                android:textColor="#64748B"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Mã khuyến mãi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã khuyến mãi"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/tvPromotionCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <!-- Mô tả -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <!-- Phần trăm giảm giá -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phần trăm giảm giá"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <!-- Giá trị đơn hàng tối thiểu -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá trị đơn hàng tối thiểu"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/tvMinValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <!-- Ngày hiệu lực -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian hiệu lực"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/tvValidTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <!-- Trạng thái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textStyle="bold"
                    android:textColor="#475569"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="16sp"
                    android:paddingBottom="12dp" />

                <!-- Nút quay lại -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quay lại"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#6366F1"
                    style="@style/Widget.Material3.Button"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
