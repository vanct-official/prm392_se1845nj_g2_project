<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yêu cầu hoàn tiền"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <EditText
        android:id="@+id/edtBankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên ngân hàng"
        android:inputType="textCapWords"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edtAccountNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tài khoản"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edtAccountHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên chủ tài khoản"
        android:inputType="textCapWords"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="14dp" />

    <EditText
        android:id="@+id/edtReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lý do hoàn tiền"
        android:inputType="textCapWords"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Vui lòng nhập thông tin đúng để tránh lỗi giao dịch."
        android:textColor="#D32F2F"
        android:textSize="13sp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="#1976D2"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textColor="@android:color/white"
            android:background="#1976D2" />
    </LinearLayout>
</LinearLayout>
