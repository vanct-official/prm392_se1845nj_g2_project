<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple_500"
            android:padding="24dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Chi tiết tour du lịch"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin tour cụ thể"
                android:textSize="15sp"
                android:textColor="#E0E7FF"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Nội dung chính -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Tên tour -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#EEF2FF"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TÊN TOUR"
                            android:textSize="12sp"
                            android:textColor="#6366F1"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tvTourName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tour Đà Nẵng 3 ngày 2 đêm"
                            android:textColor="#4338CA"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Hình ảnh (Image Slider) -->
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="20dp"
                    android:background="#E2E8F0" />

                <!-- Mô tả -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả"
                        android:textSize="13sp"
                        android:textColor="#64748B"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:text="Tham quan Bà Nà Hills, Ngũ Hành Sơn và Hội An cổ kính."
                        android:textColor="#1E293B"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Địa điểm & Giá -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="14dp"
                        app:cardBackgroundColor="#DBEAFE"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa điểm"
                                android:textSize="12sp"
                                android:textColor="#1E3A8A"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đà Nẵng"
                                android:textColor="#1E40AF"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="14dp"
                        app:cardBackgroundColor="#FEF3C7"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giá tour"
                                android:textSize="12sp"
                                android:textColor="#92400E"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.500.000₫"
                                android:textColor="#B45309"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Hướng dẫn viên -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hướng dẫn viên"
                        android:textSize="13sp"
                        android:textColor="#64748B"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvGuideName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn A"
                        android:textColor="#1E293B"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Thông tin chi tiết khác -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết tour"
                        android:textSize="13sp"
                        android:textColor="#64748B"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <!-- Ngày bắt đầu -->
                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày bắt đầu: --/--/----"
                        android:textColor="#1E293B"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Ngày kết thúc -->
                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày kết thúc: --/--/----"
                        android:textColor="#1E293B"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Số ghế trống -->
                    <TextView
                        android:id="@+id/tvSeats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ghế còn trống: --"
                        android:textColor="#1E293B"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Phần trăm đặt cọc -->
                    <TextView
                        android:id="@+id/tvDepositPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đặt cọc: --%"
                        android:textColor="#1E293B"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Trạng thái -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái"
                        android:textSize="13sp"
                        android:textColor="#64748B"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#DCFCE7"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Đang hoạt động"
                            android:textColor="#166534"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Nút quay lại -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Quay lại"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#6366F1"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
