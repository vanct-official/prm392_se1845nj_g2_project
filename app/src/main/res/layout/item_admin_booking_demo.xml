<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:padding="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chat"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_shape" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBookingName"
                android:text="Khách: Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBookingTour"
                android:text="Tour: Hà Nội - Hạ Long"
                android:textSize="14sp"
                android:textColor="#475569"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBookingDate"
                android:text="🕒 24/10/2025 10:00"
                android:textSize="13sp"
                android:textColor="#64748B"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBookingStatus"
                android:text="Trạng thái: Chờ xử lý"
                android:textSize="13sp"
                android:textColor="#2563EB"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="74dp"
                android:layout_height="35dp"
                android:layout_marginBottom="6dp"
                android:padding="6dp"
                android:text="Xác nhận"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:padding="6dp"
                android:text="Huỷ"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
