<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header tím -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_field_disabled"
            android:clipToOutline="true">

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <!-- Họ tên -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@id/imgAvatar"
                android:text="Tên người dùng"
                android:textColor="@color/accent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserName"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/imgAvatar"
                android:text="example@gmail.com"
                android:textColor="#7843C7"
                android:textSize="14sp" />

            <!-- Số điện thoại -->
            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserEmail"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/imgAvatar"
                android:text="0123456789"
                android:textColor="#6B3BB4"
                android:textSize="14sp" />

            <!-- Ngày sinh -->
            <TextView
                android:id="@+id/tvUserDob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserPhone"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/imgAvatar"
                android:text="01/01/2000"
                android:textColor="#6127B8"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Danh sách chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:elevation="3dp"
            android:clipToOutline="true">

            <!-- Thông tin cá nhân -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Thông tin cá nhân"
                    android:textSize="16sp"
                    android:textColor="#333" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Đổi mật khẩu -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Đổi mật khẩu"
                    android:textSize="16sp"
                    android:textColor="#333" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Lịch sử thanh toán -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Lịch sử thanh toán"
                    android:textSize="16sp"
                    android:textColor="#333" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Tour yêu thích -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnGoToFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Tour yêu thích"
                    android:textSize="16sp"
                    android:textColor="#333" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Điều khoản -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Điều khoản dịch vụ"
                    android:textSize="16sp"
                    android:textColor="#333" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Trợ giúp -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Trợ giúp và Hỗ trợ"
                    android:textSize="16sp"
                    android:textColor="#333" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Nút đăng xuất -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:text="Đăng xuất"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="25dp"
            android:textStyle="bold" />

        <!-- Phiên bản -->

    </LinearLayout>
</ScrollView>
