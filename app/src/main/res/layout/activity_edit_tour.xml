<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9FAFB"
    tools:context=".activity.EditTourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Hiển thị ảnh tour -->
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:iss_auto_cycle="true"
            app:iss_period="3"
            app:iss_delay="1"
            android:layout_marginBottom="12dp" />

        <!-- Nút chọn ảnh mới -->
        <Button
            android:id="@+id/btnChooseImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📷 Chọn ảnh mới"
            android:backgroundTint="#4F46E5"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Tên hướng dẫn viên hiện tại -->
        <TextView
            android:id="@+id/tvGuideNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn viên hiện tại: (Chưa chọn)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp" />

        <!-- Spinner chọn hướng dẫn viên -->
        <Spinner
            android:id="@+id/spinnerGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Tên tour -->
        <EditText
            android:id="@+id/etTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tour"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Mô tả -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả tour"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Địa điểm -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa điểm"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Số ghế -->
        <EditText
            android:id="@+id/etSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số ghế còn trống"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Giá tour -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá tour (VND)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Phần trăm đặt cọc -->
        <EditText
            android:id="@+id/etDepositPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="% đặt cọc"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Ngày bắt đầu -->
        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày bắt đầu (dd/MM/yyyy)"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Ngày kết thúc -->
        <EditText
            android:id="@+id/etEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày kết thúc (dd/MM/yyyy)"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="⬅️ Quay lại"
                android:backgroundTint="#9CA3AF"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="💾 Lưu thay đổi"
                android:backgroundTint="#4F46E5"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
