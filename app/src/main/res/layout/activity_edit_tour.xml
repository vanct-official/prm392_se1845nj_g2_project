<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Chỉnh sửa thông tin Tour"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etTourName"
            android:hint="Tên tour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etDescription"
            android:hint="Mô tả"
            android:minLines="3"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:hint="Địa điểm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etSeats"
            android:hint="Số ghế trống"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etPrice"
            android:hint="Giá (VND)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etDepositPercent"
            android:hint="Phần trăm đặt cọc (%)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etStartDate"
            android:hint="Ngày bắt đầu"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"/>

        <EditText
            android:id="@+id/etEndDate"
            android:hint="Ngày kết thúc"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"/>

        <TextView
            android:text="Hướng dẫn viên"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etGuideId"
            android:hint="ID hướng dẫn viên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:textSize="13sp"
            android:enabled="true"/>

        <Button
            android:id="@+id/btnSave"
            android:text="💾 Lưu thay đổi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg_light_gray"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>