<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA"
    tools:context=".activity.EditTourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Ảnh tour -->
        <ImageView
            android:id="@+id/imgTour"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_image_placeholder"
            android:background="@drawable/bg_image_border"
            android:contentDescription="@string/tour_image" />

        <!-- Tên hướng dẫn viên -->
        <TextView
            android:id="@+id/tvGuideName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn viên: (Chưa tải)"
            android:textColor="#555555"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <!-- Tên tour -->
        <EditText
            android:id="@+id/etTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tour"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:background="@drawable/bg_edittext" />

        <!-- Mô tả -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:minLines="3"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Địa điểm -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa điểm"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Số chỗ -->
        <EditText
            android:id="@+id/etSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số chỗ"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Giá tour -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá (VND)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Phần trăm đặt cọc -->
        <EditText
            android:id="@+id/etDepositPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phần trăm đặt cọc (%)"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Ngày bắt đầu -->
        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày bắt đầu"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Ngày kết thúc -->
        <EditText
            android:id="@+id/etEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày kết thúc"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- ID hướng dẫn viên -->
        <EditText
            android:id="@+id/etGuideId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID hướng dẫn viên"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext" />

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Quay lại"
                android:backgroundTint="#9E9E9E"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Lưu thay đổi"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
