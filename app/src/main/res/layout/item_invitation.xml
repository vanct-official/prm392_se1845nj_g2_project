<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tour Images Carousel -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTourImages"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingHorizontal="0dp" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tour Title -->
            <TextView
                android:id="@+id/tvTourTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên tour"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Destination Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Location"
                    android:layout_marginEnd="10dp"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Điểm đến: ..."
                    android:textColor="#475569"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Start Date Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Start Date"
                    android:layout_marginEnd="10dp"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày bắt đầu: ..."
                    android:textColor="#475569"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- End Date Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="End Date"
                    android:layout_marginEnd="10dp"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày kết thúc: ..."
                    android:textColor="#475569"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginBottom="12dp" />

            <!-- Status Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_status_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_status"
                    android:contentDescription="Status"
                    android:layout_marginEnd="6dp"
                    app:tint="#F59E0B" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái: pending"
                    android:textColor="#D97706"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:spacing="8dp">

                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Đồng ý"
                    android:backgroundTint="#10B981"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnDecline"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Từ chối"
                    android:backgroundTint="#EF4444"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>