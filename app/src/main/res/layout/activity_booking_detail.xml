<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/btn_back"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết đặt tour"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Tour Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTourTitle"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_cyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"
                    android:layout_marginBottom="12dp" />

                <!-- Booking Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:text="Trạng thái:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvBookingStatus"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_coral"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Booking Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:text="Thông tin đặt tour"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- Customer Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:text="Người đặt:"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_width="0dp"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Booking Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:text="Ngày bắt đầu:"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_width="0dp"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvBookingDate"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Number of People -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:text="Số người:"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_width="0dp"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvNumPeople"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Notes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Ghi chú:"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvNotes"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_style"
                        android:padding="12dp"
                        android:lines="3" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Created Date Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_cyan">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:text="Ngày tạo:"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Xác nhận đặt tour"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_confirm_style"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnCancelBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hủy chuyến"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/status_cancelled"
                android:textColor="@android:color/white"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
