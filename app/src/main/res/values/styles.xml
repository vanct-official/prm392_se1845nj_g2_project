<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ====== STYLE CHUNG CHO DỰ ÁN ====== -->
    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1E293B</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextStyle.Content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#475569</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- =============================================== -->
    <!-- 🔹 Style mặc định TextStyle tránh lỗi not found -->
    <!-- =============================================== -->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#475569</item>
<!--        <item name="android:fontFamily">@font/poppins_regular</item>-->
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice" tools:ignore="ResourceCycle">
        <item name="chipStrokeColor">@color/purple_200</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>
